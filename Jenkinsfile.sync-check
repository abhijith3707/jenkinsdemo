pipeline {
    agent any

    environment {
        GIT_REPO = 'https://github.com/abhijith3707/jenkinsdemo.git'
        dev_BRANCH = 'origin/dev'
        SLACK_CHANNEL = '#all-kabooga-cartel'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Check Sync with dev') {
            steps {
                script {
                    def featureBranch = sh(script: "git rev-parse --abbrev-ref HEAD", returnStdout: true).trim()
                    sh "git fetch origin"
                    def mergeBase = sh(script: "git merge-base ${featureBranch} ${dev_BRANCH}", returnStdout: true).trim()
                    def featureHead = sh(script: "git rev-parse ${featureBranch}", returnStdout: true).trim()
                    def devHead = sh(script: "git rev-parse ${dev_BRANCH}", returnStdout: true).trim()

                    if (mergeBase != devHead) {
                        currentBuild.result = 'UNSTABLE'
                        slackSend(channel: SLACK_CHANNEL,
                                  message: "ðŸ”„ *${featureBranch}* is **not in sync** with *dev*. Please rebase or merge dev.",
                                  color: '#FFA500')
                    } else {
                        slackSend(channel: SLACK_CHANNEL,
                                  message: "âœ… *${featureBranch}* is in sync with *dev*.",
                                  color: '#36a64f')
                    }
                }
            }
        }
    }
}
